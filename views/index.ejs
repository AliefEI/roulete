<!doctype html>
<html>

<head>
    <title>Roulette</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="container">

        <div class="jumbotron text-center">
            <h1>Roulette</h1>

            <section class="table">
                <img src="img/rouletteTable.png" alt="Roulette Table">
            </section>

            <div class="gameBoard">
                <h2 class="betTooLittle"></h2>
                <form>
                    <input type="number" id="bettingValue">
                    <select id="choice">
                        <option value="red">Red</option>
                        <option value="black">Black</option>
                        <option value="even">Even</option>
                        <option value="odd">Odd</option>
                        <option value="row1">Row 1</option>
                        <option value="row2">Row 2</option>
                        <option value="row3">Row 3</option>
                        <option value="1-12">1 - 12</option>
                        <option value="13-24">13 - 24</option>
                        <option value="25-36">25 - 36</option>
                        <option value="1-18">1 - 18</option>
                        <option value="19-36">19 - 36</option>
                        <option value="0">0</option>
                        <option value="00">00</option>
                    </select>
                </form>
                <br>
            </div>

            <section class="lastGamePlayed">
                <button id="submitBet">Place your bet!</button>
                <%if (lastGame!==undefined) {%>
                <h3><%= (lastGame.houseWins) ? 'You Lost!' : 'You win!' %>
                </h3>
                <h3>You bet: $<%= lastGame.bettingAmount >= 1000 ? overThousand : lastGame.bettingAmount %>.00</h3>
                <h3>You bet on: <%= lastGame.betOn %></h3>
                <h3>The ball landed on: <%= lastGame.landed %></h3>
                <%}%>
        </section>

        <section class="loginSection">
        <p>Login:</p>
        <a href="/login" class="btn btn-default"><span class="fa fa-user"></span>Login</a>
        </section>

    </div>

</div>
<script type="text/javascript" src="main.js"></script>
</body>
</html>